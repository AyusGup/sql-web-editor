{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "../scripts/**/*",
    "src/modules/sandbox",
    "src/modules/assignment/assignment.controller.ts",
    "src/modules/user/auth.controller.ts",
    "src/modules/hint/hint.controller.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}